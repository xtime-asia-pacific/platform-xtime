<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

  <modelVersion>4.0.0</modelVersion>
  <groupId>com.xtime</groupId>
  <artifactId>xtime</artifactId>
  <version>1</version>
  <packaging>pom</packaging>
  <name>XTime </name>
  <description>
    XTime Inc
  </description>
  <licenses>
    <license>
      <name>Commercial License</name>
      <url/>
      <distribution>repo</distribution>
    </license>
  </licenses>
  <organization>
    <name>Xtime Inc</name>
    <url>http://www.xtime.com/</url>
  </organization>
  <url>http://www.xtime.com/</url>

  <distributionManagement>
    <repository>
      <id>releases</id>
      <url>http://172.20.8.119:8000/nexus/content/repositories/releases</url>
    </repository>
    <snapshotRepository>
      <id>releases</id>
      <url>http://172.20.8.119:8000/nexus/content/repositories/snapshots</url>
    </snapshotRepository>
  </distributionManagement>

  <!-- Configure properties-->
  <properties>
    <distMgmtSnapshotsName>Xtime Development Snapshot Repository</distMgmtSnapshotsName>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <bom.build.number>${BUILD_TAG}</bom.build.number>
    <bom.build.id>${BUILD_ID}</bom.build.id>
    <bom.jenkins.url>${HUDSON_URL}job/${JOB_NAME}/${BUILD_NUMBER}</bom.jenkins.url>
  </properties>

  <profiles>
    <profile>
      <id>fast</id>
      <properties>
	<maven.test.skip>true</maven.test.skip>
	<maven.javadoc.skip>true</maven.javadoc.skip>
      </properties>
    </profile>
  </profiles>

  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-compiler-plugin</artifactId>
          <version>2.0.2</version>
          <configuration>
            <source>1.6</source>
            <target>1.6</target>
            <encoding>${project.build.sourceEncoding}</encoding>
          </configuration>
        </plugin>


        <!-- 
             * Add BOM details to war's / jar's manifest.mf
        -->
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-war-plugin</artifactId>
          <version>2.2</version>
          <configuration>
            <archive>
              <manifestSections>
                <manifestSection>
                  <name>Xtime BOM </name>
                  <manifestEntries>
                    <bom_build_number>${BUILD_TAG}</bom_build_number>
                    <bom_build_id>${BUILD_ID}</bom_build_id>
                    <bom_jenkins_url>${HUDSON_URL}job/${JOB_NAME}/${BUILD_NUMBER}</bom_jenkins_url>
                  </manifestEntries>
                </manifestSection>
              </manifestSections>
            </archive>
            <webResources>
              <resource>
                <directory>src/main/bom</directory>
                <filtering>true</filtering>
              </resource>
            </webResources>
          </configuration>
        </plugin>


        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-jar-plugin</artifactId>
          <version>2.4</version>
          <configuration>
            <archive>
              <manifestSections>
                <manifestSection>
                  <name>Xtime BOM </name>
                  <manifestEntries>
                    <bom_build_number>${BUILD_TAG}</bom_build_number>
                    <bom_buid_id>${BUILD_ID}</bom_buid_id>
                    <bom_jenkins_url>${HUDSON_URL}job/${JOB_NAME}/${BUILD_NUMBER}</bom_jenkins_url>
                  </manifestEntries>
                </manifestSection>
              </manifestSections>
            </archive>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>
    
  <modules>
    <module>xbase</module>
    <module>xannotations</module>
    <module>xannotations-test</module>
    <module>xflex-base</module>
  </modules>
</project>
